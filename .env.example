# =============================================================================
# LLM Monitoring Guardrails - Environment Configuration
# =============================================================================
# Copy to .env and fill in your values

# -----------------------------------------------------------------------------
# REQUIRED: Guardrails Token
# Get from: https://hub.guardrailsai.com/
# -----------------------------------------------------------------------------
GUARDRAILS_TOKEN=your_guardrails_token_here

# -----------------------------------------------------------------------------
# OPTIONAL: HuggingFace Token (for LMSYS dataset)
# Get from: https://huggingface.co/settings/tokens
# -----------------------------------------------------------------------------
HF_TOKEN=your_huggingface_token_here

# -----------------------------------------------------------------------------
# Alert Configuration (defaults shown)
# -----------------------------------------------------------------------------
ALERT_WINDOW_SIZE_SECONDS=300
ALERT_LOW_THRESHOLD=0.15
ALERT_MEDIUM_THRESHOLD=0.40
ALERT_HIGH_THRESHOLD=0.80
